.form {
  width: 85%;
  margin: 120rpx auto 0
}

.form input {
  width: 100%;
  height: 120rpx;
  padding-left: 24rpx;
  font-size: 32rpx;
  border-bottom: 1px solid #d6d5d6
}

.input-placeholder {  
  font-size: 32rpx
}

.form .next {
  width: 100%;
  height: 88rpx;
  margin-top: 100rpx;
  font-size: 36rpx;
  color: #fff;
	border-radius: 44rpx
}

.verificationCode {
  position: absolute;
  top: 25%;
  right: 0;
  height: 50%;
  line-height: 2;
  padding: 0 14rpx;
  font-size: 26rpx;
	color: #fff;
  background-image: linear-gradient(90deg, 
		#31adf5 0%, 
		#1c7ae6 100%), 
	linear-gradient(
		#eef5f9, 
		#eef5f9);
}

.phone {
  position: relative
}

.tip {
  color: red;
  font-size: 28rpx
}