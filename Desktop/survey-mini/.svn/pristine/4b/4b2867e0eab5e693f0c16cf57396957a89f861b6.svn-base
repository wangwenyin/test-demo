.container{
  height: 100%;
}

.section {
  position: relative;
  margin-left: 20rpx; 
  width: 580rpx;
	height: 80rpx;
	background-color: #f7f7f9;
	border-radius: 40rpx;
  margin-top: 10rpx;

}

.section input {
  width: 80%;
  height: 100%;
}

.section input, .section icon {
  float: left
}

.search {
  position: absolute;
  top: 15rpx;
  right: 20rpx;
  width: 125rpx;
  padding: 0;
  line-height: 64rpx;
  font-size: 26rpx;
  border-radius: 100rpx;
  height: 64rpx;
  /* background-color: #4B80EB; */
  background-color: #1AAD19;
  color:#fff;
}

.section icon {
  height: 50%;
  margin: 20rpx 20rpx 0 40rpx;
}

.input-placeholder {
	font-size: 28rpx;
	color: #a3a3a3;
}

.detail {
  display: inline-block;
  float: right;
}

.line {
  width: 90%;
  height: 1rpx;
  display: inline-block;
  margin: 20rpx 0rpx 20rpx 40rpx ;
  background-color:  #eee;
  text-align: center;
}

.page-body {
  display: flex;
  flex: 1;
  flex-direction: column;
  width: 100%;
  margin-top: -15rpx
}

.item {
  display: flex;
  padding: 25rpx;
  cursor: pointer;
}

.item .meta {
  flex: 1;
  padding: 10rpx;
  border-top: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
  box-shadow:2rpx 5rpx 6px 0rpx #999;
  border-radius: 20rpx
}

.item .meta .title {
  display: block;
  width: 600rpx;
  margin: 15rpx 0;
	font-size: 32rpx;
	font-weight: bold;
	color: #3d3d3d;
  font-family: PingFang-SC-Heavy;
  font-stretch: normal;
	letter-spacing: 0rpx;
}

.item .meta .artists {
  font-size: 24rpx;
  color: #707070;
  margin-top: 10rpx;
  font-family: PingFang-SC-Regular;
  font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
}

.loading{
  padding: 10rpx;
  text-align: center;
  font-size:30rpx;
}

.loading:before{
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  content: '';
  width: 40rpx;
  height: 40rpx;
  /* background: url(../../images/icon-loading.png) no-repeat; */
  background-size: contain;
  animation: rotate 1s linear infinite;
}

.loading.complete:before{
  display: none;
}
