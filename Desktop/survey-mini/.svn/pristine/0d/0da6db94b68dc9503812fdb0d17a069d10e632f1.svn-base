.container{
  width: 750px;
	background-color: #efeff4;
}


.swiperview{
  width: 750rpx;
	background-color: #ffffff;
}

.swiper {
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.name{
  width: 750rpx;
	height: 54rpx;
	font-size: 32rpx;
	font-weight: bold;
	color: #3d3d3d;
  margin-top: 25rpx;
  margin-left:20rpx;
} 


.title {
 float: left;
}

.conmmon {
  width: 750rpx;
	background-color: #ffffff;
  margin-top:20rpx;

}

.line {
  width: 100%;
  height: 2rpx;
  margin: 10rpx 0rpx;
  background-color: gainsboro;
  text-align: center;
}

.bianji{
  float: right;
  width: 100rpx;
	height: 25rpx;
	font-size: 26rpx;
	font-weight: normal;
	color: #707070;
  margin-top: 10rpx;
}

.textstates{
  padding:20rpx 0rpx 0rpx 20rpx;
	font-size: 30rpx;
	font-weight: bold;
	font-stretch: normal;
	color: #3d3d3d;
}
.statesdetail view {
  margin-top: 40rpx;
  overflow: hidden
}

.info {
  float: left;
  width: 200rpx;
  height: 100%;
  font-size: 24rpx;
  color: #707070;
}
.info_detail{
  float: left;
  width: 500rpx;
  height: 100%;
	font-size: 24rpx;
	color: #3d3d3d;
  
}

.pickertext{
	font-size: 34rpx;
	font-weight: normal;
	color: #b2b2b2;
  font-family: PingFang-SC-Medium;
  font-stretch: normal;
	letter-spacing: 0rpx;
}

.statesdetail{
  margin-left: 20rpx;

}

.swiper-tab{
    width: 750rpx;
    border-bottom: 1rpx solid gainsboro;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
}
.swiper-tab-item{
  width: 145rpx;
	font-size: 26rpx;
	font-weight: bold;
	color: #707070;
}
.active{
    color:#3d3d3d;
    border-bottom: 4rpx solid #8BADF2;
}

.roundimage {
   height: 100%;
   width: 30%;
}


.image-group {
  display: flex;
  white-space: nowrap;
  margin-top: 30rpx;
}
.image-group image {
  display: inline-block;
  width: 375rpx;
  height: 180rpx;
  margin-right: 20rpx;
}

/* 直接设置swiper属性 */
swiper {
  height: 350rpx;
}

.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 100;
  width: 100%;
  text-align: center;
  height: 120rpx;
  background-color: #efeff4;
}

.button-blue {
  background-color: #4B80EB; /* 蓝色 */


}

button {
  font-size: 30rpx;
  border-radius: 10rpx;
  width: 30%;
  height: 80rpx;
  line-height: 80rpx;
}

.locationImage{
width:28rpx;
height: 28rpx;
margin-left:15rpx;
margin-top: 4rpx; 
vertical-align: middle;
}
.locationText{
  color:#707070;
  font-size:24rpx;
  margin-left:10rpx;
}

