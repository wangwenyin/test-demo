/* pages/login/login.wxss */
.login-container {
   height: 100%;
   overflow: hidden
 }
 
.title {
  width: 90%;
  margin: 86rpx auto 60rpx;
	font-size: 60rpx;
	color: #3d3d3d;
}

form {
  width: 85%;
  margin: 0 auto
}

form input {
  width: 100%;
  height: 120rpx;
  border-bottom: 1px solid #d6d5d6
}

.input-placeholder {  
    font-size: 32rpx
}

.forgetPass {
  float: right;
  margin-right: 5%;
  font-size: 24rpx;
	color: #3d3d3d
}
form .login {
  width: 100%;
  height: 88rpx;
  margin-top: 100rpx;
  font-size: 36rpx;
  color: #fff;
 /*  background-image: linear-gradient(90deg, 
		#31adf5 0%, 
		#1c7ae6 100%), 
	linear-gradient(
		#eef5f9, 
		#eef5f9); */
	background-blend-mode: normal, 
		normal;
	border-radius: 44rpx
}

form .wxLogin {
  height: 88rpx;
  margin-top: 30rpx;
  font-size: 36rpx;
  color: #999;
  border: solid 1rpx #d6d5d6; 
  border-radius: 44rpx
}

.wxLogin image {
  position: absolute;
  left: 25%;
  top: 22rpx;
  width: 44rpx;
  height: 44rpx;
}

.registerView{
  width: 100%;
  height: 60rpx;
  color:#36A0D2;
  text-align:center;
  font-size:30rpx;
  position: fixed;
  left: 0;
  bottom: 0;
}
.fenge{
  padding:24rpx 12rpx 0rpx 12rpx;
  margin-left: 12rpx;
  border-left: 2rpx solid #000;
  font-size: 0;
}

.login-icon{
  flex: none;
  text-align:center;
  margin-top: 10rpx;
  font-weight:bold;
  font-size:40rpx;
}

 