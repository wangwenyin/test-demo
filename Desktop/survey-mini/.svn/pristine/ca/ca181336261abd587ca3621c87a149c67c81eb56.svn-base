/* pages/handWriting/handWriting.wxss */
canvas {
  width: 100%;
  height: 400rpx;
}

.handTitle {
  height: 60rpx;
  color: #1AAD19;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center
}

.handCenter {
  width: 90%;
  margin: 0 auto;
  border: 4rpx dashed #e9e9e9
}

.handBtn {
  display: flex;
  padding: 20rpx
}

.delBtn, .saveBtn {
  flex: 1
}
