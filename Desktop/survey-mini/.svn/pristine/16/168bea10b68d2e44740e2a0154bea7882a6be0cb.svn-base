// pages/modifyPwd/modifyPwd.js
const app = getApp()
const { hexMD5 } = require('../../utils/md5.js')
const { setAuth, modifyPwd } = require('../../api.js')

Page({

  /**
   * 页面的初始数据
   */
  data: {
    phoneNum: '',
    showTip: false,
    disabled: false,
    tip: ''
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    this.setData({
      phoneNum: app.globalData.phoneNum
    })
    this.setAuth()
  },
  setAuth() {
    // 查看是否授权
    wx.getSetting({
      success(res) {
        if (res.authSetting['scope.userInfo']) {
          // 已授权
          wx.getUserInfo({
            success(res) {
              const data = {
                token: app.globalData.token,
                // 加密数据（后台用于获取unionid）
                encryptedData: res.encryptedData,
                iv: res.iv,
                signature: res.signature,
                rawData: res.rawData,
                userInfo: res.userInfo
              }
              setAuth(data).then(res => {
                if (res.code === 200) {
                  // wx.setStorageSync('wx_token', JSON.stringify(res.data))
                }
              })
            },
            fail(res) {
              wx.showModal({
                title: '用户未授权',
                content: '如需正常使用信息查勘，请按确定并在授权管理中选中“用户信息”，然后点按确定。最后再重新进入小程序即可正常使用。',
                showCancel: false,
                success: function (res) {
                  if (res.confirm) {
                    wx.openSetting({
                      success: function success(res) {
                        console.log('调用openSetting方法success:', res)
                      }
                    })
                  }
                }
              })
            }
          })
        } 
      }
    })
  },
  // 密码格式验证
  checkPwd(e) {
    let pwd = e.detail.value
    let reg = new RegExp(/[A-Za-z].*[0-9]|[0-9].*[A-Za-z]/)
    if (!reg.test(pwd)) {
      this.setData({
        showTip: true,
        tip: '提示：密码必须为字母加数字且长度不小于8位！'
      })
    } else {
      this.setData({
        showTip: false,
        password: pwd
      })
    }
  },
  checkTwo(e) {
    if (e.detail.value !== this.data.password) {
      this.setData({
        disabled: true,
        showTip: true,
        tip: '提示：两次密码不一致。'
      })
    } else {
      this.setData({
        disabled: false,
        showTip: false
      })
    }
  },
  formSubmit(e) {
    const form = e.detail.value
    form.new_pwd = hexMD5(form.new_pwd)
    form.old_pwd = hexMD5(form.old_pwd)
    const data = {
      ...form,
      token: app.globalData.token
    }
    modifyPwd(data).then(res => {
      if (res.code === 200) {
        wx.showToast({
          title: '密码修改成功！',
          icon: 'none'
        })
        setTimeout(() => {
          wx.switchTab({
            url: '/pages/task_pl/task_pl',
          })
        }, 1000)
      } else {
        wx.showToast({
          title: '旧密码错误！',
          icon: 'none'
        })
      }
    })
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {
  
  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {
  
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {
  
  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {
  
  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {
  
  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {
  
  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {
  
  }
})