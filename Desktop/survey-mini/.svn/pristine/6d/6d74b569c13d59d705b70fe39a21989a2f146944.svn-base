.page-body {
  display: flex;
  flex: 1;
  flex-direction: column;
  width: 100%;
  margin-top: -15rpx;
}


.item {
  display: flex;
  padding: 25rpx;
  /* border-bottom: 1rpx solid #eee; */
  cursor: pointer;
}

.item .meta {
  flex: 1;
  padding: 10rpx;
  border-top: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
  box-shadow:2rpx 5rpx 6px 0rpx #999
  
}
.item .meta .title {
  width: 600rpx;
	height: 31rpx;
	font-size: 32rpx;
	font-weight: bold;
	color: #3d3d3d;
  font-family: PingFang-SC-Heavy;
  font-stretch: normal;
	letter-spacing: 0rpx;
}

.item .meta .artists {
  font-size: 24rpx;
  color: #707070;
  margin-top: 10rpx;
  font-family: PingFang-SC-Regular;
  font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
}



.clear{
  clear: both;
  overflow: hidden;
}
 
.loading{
  padding: 10rpx;
  text-align: center;
  font-size:30rpx;
}
.loading:before{
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  content: '';
  width: 40rpx;
  height: 40rpx;
  /* background: url(../../images/icon-loading.png) no-repeat; */
  background-size: contain;
  animation: rotate 1s linear infinite;
}
.loading.complete:before{
  display: none;
}
