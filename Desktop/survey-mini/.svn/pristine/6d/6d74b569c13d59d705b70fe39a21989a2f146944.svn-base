.container{
   height: 100%;
  /*  overflow: hidden */
}
.section {
  position: relative;
  margin-left: 20rpx; 
  width: 580rpx;
	height: 80rpx;
	background-color: #f7f7f9;
	border-radius: 40rpx;
  margin-top: 10rpx;

}


.section input {
  display: inline-block;
}

.detail {
  display: inline-block;
  float:right;
}

.search {
  position: absolute;
  top: 15rpx;
  right: 20rpx;
 width: 125rpx;
 padding: 0;
 line-height: 64rpx;
 font-size: 26rpx;
 border-radius: 100rpx;
 height: 64rpx;
 background-color: #4B80EB;
 color:#fff;
}

 .input-placeholder {
	font-size: 28rpx;
	color: #a3a3a3;
}

 .section input, .section icon {
  float: left
}

.section icon {
  height: 50%;
  margin: 20rpx 20rpx 0 40rpx;
}

.section input {
  height: 50%;
  margin: -43rpx 0rpx 0 100rpx;
}



.line {
  width: 90%;
  height: 1rpx;
  display: inline-block;
  margin: 20rpx 0rpx 20rpx 40rpx ;
  background-color:  #eee;
  text-align: center;
}

